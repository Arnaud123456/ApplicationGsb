<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arnaud.applicationgsb.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir le protocole" />

    <TextView
        android:text="Saisir la glycémie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/rdoProtocole2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:text="Ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAjouter"
        android:layout_above="@+id/btnMAS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:visibility="invisible" />

    <Button
        android:text="afficher l'insuline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAfficher"
        android:layout_alignBottom="@+id/TxtVAfficherRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/editGlycemie"
        android:layout_toStartOf="@+id/editGlycemie"
        android:layout_marginTop="13dp">

        <RadioButton
            android:text="Protocole 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdoProtocole1"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/txtPrenom"
            android:layout_alignEnd="@+id/txtPrenom"
            android:layout_weight="1" />

        <RadioButton
            android:text="Protocole 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdoProtocole2"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/rdoProtocole1"
            android:layout_toLeftOf="@+id/editGlycemie"
            android:layout_toStartOf="@+id/editGlycemie"
            android:layout_weight="1" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editGlycemie"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Saisir le nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/txtNom"
        android:layout_below="@+id/btnAfficher"
        android:layout_alignRight="@+id/btnAjouter"
        android:layout_alignEnd="@+id/btnAjouter"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editNom"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/txtNom"
        android:layout_alignBottom="@+id/txtNom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editPrenom"
        android:visibility="invisible"
        android:layout_alignTop="@+id/txtPrenom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Insuline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtVAfficherRes"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Saisir le prénom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrenom"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:layout_above="@+id/btnAjouter"
        android:layout_alignLeft="@+id/txtNom"
        android:layout_alignStart="@+id/txtNom" />

    <Button
        android:text="malades à signaler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMAS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
